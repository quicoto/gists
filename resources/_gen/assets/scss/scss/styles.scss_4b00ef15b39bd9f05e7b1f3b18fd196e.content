:root{--primary:#0fd78c}::selection{background:var(--primary);color:#fff}html{font:20px/1.6 sans-serif;height:100%;background:linear-gradient(45deg,#22c1c3 0%,#fdbb2d 100%);height:100%;margin:0;background-attachment:fixed}body{font-size:1rem;color:#fff;font-family:system-ui,-apple-system,segoe ui,Roboto,helvetica neue,noto sans,liberation sans,Arial,sans-serif,apple color emoji,segoe ui emoji,segoe ui symbol,noto color emoji;background:#162c35;font-weight:300;font-size:1rem;line-height:1.4em;padding:1rem;max-width:70ch;margin:1rem auto}a{color:var(--primary);text-decoration:none}a:hover{text-decoration:underline}pre{margin-bottom:2rem}pre code{display:block;border:none;padding:1em;background:0 0;overflow-x:auto}code{background:var(--primary);padding:0 .2em;font-family:courier new,Courier,monospace}time{padding-right:1rem}